{{- /*gotype: github.com/jansorg/gotime/gotime/report.BucketReport*/ -}}

{{define "Bucket"}}
    {{- /*gotype: github.com/jansorg/gotime/gotime/report.ResultBucket*/ -}}
    {{$bucket := .}}
    {{$leafs := .LeafChildren}}
    {{$showExact := .HasRoundedChildren}}

    <div class="bucket">
        {{if $leafs}}
            <table class="table-odd">
                <thead>
                <tr>
                    <th class="th-wide"><span class="title">{{.Title}}</span></th>
                    <th class="time">{{i18n "Duration"}}</th>
                    {{if $showExact}}
                        <th class="time">{{i18n "Exact duration"}}</th>
                    {{end}}
                </tr>
                </thead>
                <tbody>
                {{range $leafs}}
                    <tr>
                        <td>{{.Title}}</td>
                        <td class="time">{{minDuration .Duration}}</td>
                        {{if $showExact}}
                            <td class="time">{{minDuration .ExactDuration}}</td>
                        {{end}}
                    </tr>
                {{end}}
                </tbody>
                <tfoot class="subtotal">
                <tr>
                    <th>{{i18n "Total"}}</th>
                    <th class="time">{{minDuration $bucket.Duration}}</th>
                    {{if $showExact}}
                        <th class="time">{{minDuration $bucket.ExactDuration}}</th>
                    {{end}}
                </tr>
                </tfoot>
            </table>
        {{end}}

        {{if .Empty}}
            {{if not .DateRange.Empty}}
                <div class="title range">{{.DateRange}}</div>
            {{end}}
        {{else}}
            <div class="buckets">
                {{range .Results}}
                    {{if not .Empty}}
                        {{template "Bucket" .}}
                    {{end}}
                {{end}}
            </div>
        {{end}}
    </div>
{{end}}

<!doctype html>
<html lang="{{ langBase }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <title></title>

    {{template "commonCSS"}}
    {{template "customCSS"}}
</head>
<body>
{{template "Summary" .Result}}
{{template "Bucket" .Result}}
</body>
</html>